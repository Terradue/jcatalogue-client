<document xmlns="http://maven.apache.org/changes/1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/changes/1.0.0 http://maven.apache.org/plugins/maven-changes-plugin/xsd/changes-1.0.0.xsd">
  <properties>
    <title>JCatalogue Client Changes</title>
  </properties>
  <body>
    <release version="0.6" date="2012-02-??" description="New features release.">
      <action dev="simonetripodi" type="fix" due-to="Francesco Barchetta">
        Realm authentication accepted also for Catalogue access
      </action>
      <action dev="simonetripodi" type="update">
        Added SSL certificates authentication support
      </action>
    </release>

    <release version="0.6" date="2012-02-??" description="Maintenance release.">
      <action dev="simonetripodi" type="fix">
        DataSet.endDate always set with beginDate
      </action>
    </release>

    <release version="0.5" date="2012-01-18" description="Maintenance release.">
      <action dev="simonetripodi" type="remove">
        Removed the resumable download, not supported on main customers servers.
      </action>
    </release>

    <release version="0.4" date="2011-12-19" description="Maintenance release.">
      <action dev="simonetripodi" type="fix">
        download handler never failed
      </action>
      <action dev="simonetripodi" type="updated">
        wrong Serie name class replace with Series class
      </action>
      <action dev="simonetripodi" type="add">
        more logging stuff
      </action>
    </release>

    <release version="0.3" date="2011-12-13" description="Maintenance release.">
      <action dev="simonetripodi" type="fix">
        fixed HTTP GET parameters invocation
      </action>
      <action dev="simonetripodi" type="add">
        added logging stuff
      </action>
    </release>

    <release version="0.2" date="2011-12-07" description="Maintenance release.">
      <action dev="simonetripodi" type="add">
        added CatalogueClient#getDataSet() methods to access to a single DataSet
      </action>
      <action dev="simonetripodi" type="fix">
        added missing published attribute in DataSet list
      </action>
    </release>

    <release version="0.1" date="2011-12-03" description="First release." />
  </body>
</document>
